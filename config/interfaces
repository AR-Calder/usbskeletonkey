source-directory /etc/network/interfaces.d

auto lo

allow-hotplug wlan0
iface wlan0 inet static
    address 192.168.0.237
    netmask 255.255.255.0
    network 192.168.0.0
    broadcast 192.168.0.255
    gateway 192.168.0.1
    wpa-conf /etc/wpa_supplicant/wpa_supplicant.conf

allow-hotplug usb0
    address 10.10.10.10
    netmask 128.0.0.0
    gateway 10.10.10.1