source-directory /etc/network/interfaces.d

auto lo

# wlan0
allow-hotplug wlan0
iface wlan0 inet static  # Static address
    address 192.168.0.237
    netmask 255.255.255.0
    network 192.168.0.0
    broadcast 192.168.0.255
    gateway 192.168.0.1
    wpa-ssid
    wpa-psk

# usb0
allow-hotplug usb0
iface usb0 inet static  # Static address
    address 1.0.0.1
    netmask 0.0.0.0
